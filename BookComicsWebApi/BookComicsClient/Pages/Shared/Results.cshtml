@model IEnumerable<BookComicsClient.Models.BookWebApiModel>
@*<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>*@
@*<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>*@
@foreach (var item in Model)
{
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Id)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AverageRate)
            <div class="rating-stars">
                <!-- Empty stars -->
                <span class="star @(item.AverageRate > 1 ? "selected" : "")" data-value="1">&#9734;</span>
                <span class="star @(item.AverageRate > 2 ? "selected" : "")" data-value="2">&#9734;</span>
                <span class="star @(item.AverageRate > 3 ? "selected" : "")" data-value="3">&#9734;</span>
                <span class="star @(item.AverageRate > 4 ? "selected" : "")" data-value="4">&#9734;</span>
                <span class="star @(item.AverageRate == 5 ? "selected" : "")" data-value="5">&#9734;</span>
            </div>
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ReleaseDate)
        </td>
        <td>
            <button id="viewbtn" class="btn btn-primary">ViewData</button>
        </td>

        <td>
            @*@Html.ActionLink("RateMovie", "RateMovie","Movie", new { id = item.Id })*@
            <button class="btn btn-info rate-book-button" data-toggle="modal" data-target="#ratingModal" data-image="@item.ImagePath" data-bookid="@item.Id" data-title = "@item.Title" data-backdrop="false">Rate book1</button>
        </td>
    </tr>
}



<style>
    .book-image-container img {
        width: 250px;
        margin-bottom: 30px
    }

    .rating-stars .star {
        display: inline-block;
        font-size: 36px; /* Increase the font size as per your preference */
        cursor: pointer;
    }

        .rating-stars .star.selected::before {
            position: absolute;
            content: "\2605";
            color: yellow;
            font-size: 36px; /* Increase the font size to match the star size */
        }

    .modal-open {
        overflow: hidden;
        background-color: rgba(0, 0, 0, 0.5);
    }

    .modal-content {
        text-align: center;
    }
</style>
